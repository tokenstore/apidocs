{
  "extends": [
    "standard"
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "strict": [2, "never"],
    "object-curly-spacing": [2, "always"],
    "no-process-env": 2,
    "no-process-exit": 2
  }
}
